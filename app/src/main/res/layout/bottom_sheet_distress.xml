<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/surface"
    android:elevation="8dp">

    <!-- Jenis Kerusakan -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/distress_type_hint"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/primary"
        app:boxStrokeWidth="1.5dp"
        app:boxStrokeWidthFocused="2dp">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/actvDistressType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:dropDownHeight="200dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:importantForAutofill="no" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tingkat Keparahan (Dropdown) -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/severity_label"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/primary"
        app:boxStrokeWidth="1.5dp"
        app:boxStrokeWidthFocused="2dp">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/actvSeverity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:dropDownHeight="200dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:importantForAutofill="no" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Unit Label Dinamis + Quick Buttons -->
    <TextView
        android:id="@+id/tvUnitLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unit_length"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuick5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/quick_5"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginEnd="4dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuick10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/quick_10"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuick20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/quick_20"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuick50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/quick_50"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginStart="4dp"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <!-- Input Custom -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/custom_value_hint"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/primary"
        app:boxStrokeWidth="1.5dp"
        app:boxStrokeWidthFocused="2dp">

        <EditText
            android:id="@+id/etLengthArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textSize="16sp"
            android:autofillHints="lengthOrArea" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Foto dan Voice (Icon Buttons) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddPhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:icon="@drawable/ic_camera"
            app:iconGravity="textStart"
            android:text="@string/add_photo"
            android:textSize="14sp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginEnd="8dp"
            app:cornerRadius="8dp"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:icon="@drawable/ic_mic"
            app:iconGravity="textStart"
            android:text="@string/record_voice"
            android:textSize="14sp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginStart="8dp"
            app:cornerRadius="8dp"
            app:iconPadding="8dp" />
    </LinearLayout>

    <!-- Thumbnail Foto (opsional) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:id="@+id/photoThumbContainer">

        <ImageView
            android:id="@+id/ivPhotoThumb"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/photo_thumb_bg"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/photo_thumbnail" />
    </FrameLayout>

    <!-- Catatan -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/notes_hint"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="20dp"
        app:boxStrokeColor="@color/primary"
        app:boxStrokeWidth="1.5dp"
        app:boxStrokeWidthFocused="2dp">

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:padding="12dp"
            android:textSize="14sp"
            android:autofillHints="notes" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tombol Simpan -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textSize="16sp"
        app:icon="@drawable/ic_save"
        style="@style/Button.Premium"
        app:cornerRadius="12dp" />

</LinearLayout>