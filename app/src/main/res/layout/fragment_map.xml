<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Map fills entire screen -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- TOP INFO BAR — hanya speed dan distance -->
    <LinearLayout
        android:id="@+id/topInfoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:background="@color/transparent_black"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:weightSum="2">

        <!-- Speed -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 km/j"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_speed"
                android:textColor="@color/gray_light"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Distance -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 m"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_distance"
                android:textColor="@color/gray_light"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- FAB ORIENTASI (pojok kanan atas) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabToggleOrientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_compass"
        app:backgroundTint="@color/accent"
        app:tint="@color/white"
        app:elevation="8dp"
        android:contentDescription="@string/toggle_orientation" />

    <!-- ACTIVE SEGMENT BAR — muncul saat segment aktif (sekarang untuk info kondisi/permukaan) -->
    <LinearLayout
        android:id="@+id/segmentInfoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="56dp"
        android:orientation="horizontal"
        android:background="@color/primary_dark"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_flag_start"
            android:layout_marginEnd="8dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvSegmentStartKm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Awal: 0 m"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/condition_baik"
            android:textColor="@color/green_light"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tvSurface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_surface"
            android:textColor="@color/primary_light"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- CHART PANEL — di bawah, height 160dp -->
    <LinearLayout
        android:id="@+id/chartContainer"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="bottom"
        android:background="@color/transparent_black"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/chart_label_z"
                android:textColor="@color/gray_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvChartConditionBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="@color/green_light"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartVibration"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- ===== RIGHT SIDE FABs (normal size) ===== -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSurvey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="176dp"
        android:src="@drawable/ic_play"
        app:backgroundTint="@color/primary"
        app:tint="@color/white"
        app:elevation="8dp"
        android:contentDescription="@string/content_desc_survey_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="244dp"
        android:src="@drawable/ic_stop"
        android:visibility="gone"
        app:backgroundTint="@color/red_light"
        app:tint="@color/white"
        app:elevation="8dp"
        android:contentDescription="@string/content_desc_stop_fab" />

    <!-- ===== LEFT SIDE FABs (mini size) ===== -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabToggleChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:layout_marginBottom="176dp"
        android:src="@drawable/ic_chart"
        android:visibility="gone"
        app:backgroundTint="@color/primary_dark"
        app:tint="@color/white"
        app:fabSize="mini"
        app:elevation="6dp"
        android:contentDescription="@string/content_desc_chart_toggle" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="228dp"
        android:src="@drawable/ic_camera"
        android:visibility="gone"
        app:backgroundTint="@color/primary_dark"
        app:tint="@color/white"
        app:fabSize="mini"
        app:elevation="6dp"
        android:contentDescription="@string/content_desc_camera_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="280dp"
        android:src="@drawable/ic_mic"
        android:visibility="gone"
        app:backgroundTint="@color/primary_dark"
        app:tint="@color/white"
        app:fabSize="mini"
        app:elevation="6dp"
        android:contentDescription="@string/content_desc_voice_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="332dp"
        android:src="@drawable/ic_condition"
        android:visibility="gone"
        app:backgroundTint="@color/primary_dark"
        app:tint="@color/white"
        app:fabSize="mini"
        app:elevation="6dp"
        android:contentDescription="@string/content_desc_condition_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSurface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="384dp"
        android:src="@drawable/ic_surface"
        android:visibility="gone"
        app:backgroundTint="@color/primary_dark"
        app:tint="@color/white"
        app:fabSize="mini"
        app:elevation="6dp"
        android:contentDescription="@string/content_desc_surface_fab" />

    <!-- Voice Recording Indicator -->
    <LinearLayout
        android:id="@+id/voiceRecordingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="64dp"
        android:background="@color/primary_dark"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone">

        <View
            android:id="@+id/tvRecordingDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@color/red_light"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvRecordingTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnStopMapRecording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop"
            android:textSize="12sp"
            android:layout_marginStart="12dp"
            android:textColor="@color/white"
            style="@style/Widget.MaterialComponents.Button.TextButton" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>